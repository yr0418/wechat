<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <classPathEntry location="D:\Java\ConnectionDriver\mysql-connector-java-5.1.46/mysql-connector-java-5.1.46.jar" />
    <context id="DBTables"  targetRuntime="MyBatis3">
        <commentGenerator >
            <property name="suppressAllComments" value="true"/>
            <property name="suppressDate" value="true" />
        </commentGenerator>
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/wechat?useSSL=false"
                        userId="root"
                        password="26bb9460c2ff208c" />
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>
        <!--生成model-->
        <javaModelGenerator targetPackage="com.yr.wechat.mybatis.pojo"
                            targetProject="src\main\java" >
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>
        <!--生成mapping-->
        <sqlMapGenerator targetPackage="mapper"
                         targetProject="src\main\resources" >
            <property name="enableSubPackages" value="false" />
        </sqlMapGenerator>
        <!--生成dao-->
        <javaClientGenerator targetPackage="com.yr.wechat.mybatis.mapper"
                             targetProject="src\main\java" type="XMLMAPPER" >
            <property name="enableSubPackages" value="false" />
        </javaClientGenerator>
        <!--数据库-->
        <table schema="wechat" tableName="news"
               domainObjectName="News" enableCountByExample="false"
               enableDeleteByExample="false" enableSelectByExample="false"
               enableUpdateByExample="false">
            <ignoreColumn column="FRED" />
            <columnOverride column="LONG_INTEGER_FIELD" jdbcType="INTEGER" />
        </table>

    </context>
</generatorConfiguration>
